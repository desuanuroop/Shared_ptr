#include <iostream>
namespace cs540{
using namespace std;
	template<typename T>
	class SharedPtr{
		class ObjPtr{
			public:
			T *Optr;
			int *ref_count;
		};
		public:
		ObjPtr *ptr = NULL; //Member
		//Default constructors
		SharedPtr(){
			ptr=NULL;
		}

		//Construct a SharedPtr pointing to given object
		template<typename U>
		explicit SharedPtr(U *ptd){
 	               if(ptr == NULL){
        	                ptr = new ObjPtr();
                	        ptr->Optr = ptd;
                        	ptr->ref_count = new int(1);
                	}
		}

		//copy constructor
		SharedPtr(const SharedPtr &p){//copy Constructor
			if(p.ptr != NULL)
                        	(*p.ptr->ref_count)++;
	                ptr = new ObjPtr();
			ptr->Optr = p.ptr->Optr;
			ptr->ref_count = p.ptr->ref_count;
		}

		//copy constructor with Change of Type
		template<typename U>
		SharedPtr(const SharedPtr<U> &p){
			if(p.ptr != NULL)
				(*p.ptr->ref_count)++;
	                ptr = new ObjPtr();
			ptr->Optr = p.ptr->Optr;
			ptr->ref_count = p.ptr->ref_count;
		}

		//Move reference
		SharedPtr(SharedPtr &&p){
			cout<<"HI"<<endl;
			ptr = p.ptr;
			p.ptr = NULL;
		}

		//Move reference with Change of Type
		template<typename U>
		SharedPtr(SharedPtr<U> &&p){
			ptr = p.ptr;
			p.ptr = NULL;
		}
/*
		//Assignment operator
		SharedPtr &operator=(const SharedPtr &from){
			if(this->ptr != NULL)
				this->ptr->ref_count--;
			this->ptr = from.ptr;
			this->ptr->ref_count++;
			return *this;
		}

		//Assignment operator with Change of Type
		template<typename U>
		SharedPtr &operator=(const SharedPtr<U> &from){
			if(this->ptr != NULL)
				this->ptr->ref_count--;
			this->ptr = from.ptr;
			this->ptr->ref_count++;
			return *this;
		}

		//Assignment operator with Move
		SharedPtr &operator=(SharedPtr &&p){
			if(this->ptr != NULL)
				this->ptr->ref_count--;
			ptr = p.ptr;
			p.ptr = NULL;
			return *this;
		}

		//Assignment opeartor with Move Change of Type
		template<typename U>
		SharedPtr &operator=(SharedPtr<U> &&p){
			if(this->ptr != NULL)
				this->ptr->ref_count--;
			ptr->Optr = p.ptr->Optr;
			ptr->ref_count = p.ptr->ref_count;
			p.ptr = NULL;
			return *this;
		}

		//get
		T* get() const{
			if(ptr)
				return ptr->Optr;
			return NULL;
		}

*/		//Delete if only one reference
		void delet(SharedPtr<T>::ObjPtr *ptr){
			if(!ptr)
				return;
			if((*ptr->ref_count) == 1){
				delete ptr->Optr;
				delete ptr->ref_count;
			}else
				(*ptr->ref_count)--;
			delete ptr;
		}
		//Reset
		void reset(){
			delet(ptr);
			ptr = NULL; 
		}
		
		//Reset to another pointer
		template<typename U>
		void reset(U *p){
			delet(ptr);
			ptr = new ObjPtr();
			ptr->Optr = p;
			*(ptr->ref_count)++;
		}
		//Destructor
		~SharedPtr(){
			delet(ptr);
		}
	};
}//End of namespace
